<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="3dp"
        />
    <gradient
        android:angle="90"
        android:centerX="50%"
        android:startColor="@color/background_placar_polo"
        android:centerColor="@color/background_placar_center"
        android:endColor="@color/background_placar_polo"
        android:type="linear"
        />
    <padding
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp"
        />
    <stroke
        android:width="@dimen/altura_linha"
        android:color="@color/midle"
        />
</shape>