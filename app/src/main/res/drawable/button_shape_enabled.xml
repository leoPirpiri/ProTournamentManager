<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle"
    tools:ignore="MissingDefaultResource">
    <corners
        android:radius="30dp"
        />
    <gradient
        android:angle="0"
        android:centerX="50%"
        android:startColor="@color/exo"
        android:centerColor="@color/midle"
        android:endColor="@color/core"
        android:type="linear"
        />
    <padding
        android:left="@dimen/btn_shape_pad_hor"
        android:top="@dimen/btn_shape_pad_ver"
        android:right="@dimen/btn_shape_pad_hor"
        android:bottom="@dimen/btn_shape_pad_ver"
        />
    <stroke
        android:width="@dimen/btn_shape_borda"
        android:color="#000000"
        />
</shape>