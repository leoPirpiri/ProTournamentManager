<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_nome_equipe"
        android:textSize="20dp"
        android:padding="5dp"/>
    <EditText
        android:id="@+id/etx_nome_nova_equipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="35"
        android:hint="@string/hint_nome_equipe"
        android:singleLine="true"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_sigla_equipe"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/etx_sigla_nova_equipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hint_sigla_equipe"
            android:maxLength="5"
            android:padding="5dp"
            android:singleLine="true"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:padding="10dp"
        android:layout_gravity="center">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btn_confirmar_equipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_adicionar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_shape_desabled"
                android:enabled="false"
                android:shadowColor="#3D3D3D"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="@color/btn_texto_ic"
                android:textSize="16sp"
                />
            <Button
                android:id="@+id/btn_cancelar_equipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancelar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_shape_enabled"
                android:shadowColor="#3D3D3D"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="@color/btn_texto_ic"
                android:textSize="16sp"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>