<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/cor_transparente"
    android:padding="@dimen/espaco_partida">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/msg_alerta_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Algum tipo de texto aqui! mas muito,"
            android:textAlignment="center"
            android:textSize="20dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/ic_mesario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:drawableLeftCompat="@drawable/user_tipo_mesario_torneio" />
        <Spinner
            android:id="@+id/spr_mesarios"
            android:layout_width="@dimen/largura_spinner_padrao"
            android:layout_height="wrap_content"
            android:scrollbarSize="2dp"
            android:textAlignment="center"
            android:visibility="gone" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cor_transparente">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/img_alerta_default"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_alerta_default"
            android:background="@color/cor_transparente"
            android:scaleType="fitCenter"
            android:src="@drawable/dados"
            android:visibility="gone"/>
/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/placar_pad_ver">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btn_cancelar_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancelar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_shape_enabled"
                android:shadowColor="#3D3D3D"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="@color/btn_texto_ic"
                android:textSize="16sp"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btn_confirmar_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_confirmar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_shape_enabled"
                android:shadowColor="#3D3D3D"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="@color/btn_texto_ic"
                android:textSize="16sp"
                android:visibility="gone"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>