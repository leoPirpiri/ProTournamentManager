<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/cor_transparente">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/msg_alerta_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Algum tipo de texto aqui! mas muito, muito txtos aqui"
            android:padding="5dp"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cor_transparente">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/img_alerta_default"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_alerta_default"
            android:background="@color/cor_transparente"
            android:scaleType="fitCenter"
            android:src="@drawable/dados"
            android:visibility="gone"/>
/>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_gravity="center">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btn_confirmar_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_adicionar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_shape_desabled"
                android:enabled="false"
                android:shadowColor="#3D3D3D"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="@color/btn_texto_ic"
                android:textSize="16sp"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btn_cancelar_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancelar"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_shape_enabled"
                android:shadowColor="#3D3D3D"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:textColor="@color/btn_texto_ic"
                android:textSize="16sp"
                android:visibility="gone"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>