<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_soft"
    tools:context=".EquipeActivity"
    android:layout_gravity="center"
    android:padding="@dimen/padding_msg_informacoes">
        <LinearLayout
            android:id="@+id/layout_estatica_campeao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/padding_estatisticas">
                <ImageView
                    android:layout_width="@dimen/largura_trofeu"
                    android:layout_height="@dimen/altura_trofeu"
                    android:scaleType="fitCenter"
                    android:src="@drawable/trofeu"></ImageView>
                <TextView
                    android:id="@+id/txv_estatistica_campeao"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nome do campeÃ£o aqui."
                    android:textStyle="bold"
                    android:textSize="@dimen/informacoes_fonte"
                    android:paddingStart="@dimen/padding_estatisticas"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_estatisticas">
                <ImageView
                    android:layout_width="@dimen/largura_trofeu"
                    android:layout_height="@dimen/altura_trofeu"
                    android:scaleType="fitCenter"
                    android:src="@drawable/acao_add_ponto_pro"></ImageView>
                <TextView
                    android:id="@+id/txv_estatistica_artilheiros"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estatiscas da equipe"
                    android:textStyle="normal"
                    android:textSize="@dimen/informacoes_fonte"
                    android:paddingStart="@dimen/padding_estatisticas" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_estatisticas">
                <ImageView
                    android:layout_width="@dimen/largura_trofeu"
                    android:layout_height="@dimen/altura_trofeu"
                    android:scaleType="fitCenter"
                    android:src="@drawable/acao_add_falta"></ImageView>
                <TextView
                    android:id="@+id/txv_estatistica_faltas"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estatiscas da equipe"
                    android:textStyle="normal"
                    android:textSize="@dimen/informacoes_fonte"
                    android:paddingStart="@dimen/padding_estatisticas" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_estatisticas">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/largura_trofeu"
                            android:layout_height="@dimen/altura_trofeu"
                            android:scaleType="fitCenter"
                            android:src="@drawable/acao_add_card_vermelho"></ImageView>
                        <ImageView
                            android:layout_width="@dimen/largura_trofeu"
                            android:layout_height="@dimen/altura_trofeu"
                            android:scaleType="fitCenter"
                            android:src="@drawable/acao_add_card_amarelo"></ImageView>
                </LinearLayout>
                <TextView
                    android:id="@+id/txv_estatistica_cartoes"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estatiscas da equipe"
                    android:textStyle="normal"
                    android:textSize="@dimen/informacoes_fonte"
                    android:paddingStart="@dimen/padding_estatisticas" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            />
</LinearLayout>