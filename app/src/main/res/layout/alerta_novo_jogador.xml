<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/listDivider"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/equipe_pad_ver"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/lbl_nome_jogador"
            android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/btn_del_jogador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/branco"
                android:background="@drawable/button_shape_danger"
                android:foreground="@android:drawable/ic_menu_delete"
                android:foregroundGravity="center"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/etx_nome_novo_jogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_nome_jogador"
        android:maxLength="35"
        android:padding="@dimen/fab_margin"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginRight="8dp"
            android:text="@string/lbl_posicao" />

        <Spinner
            android:id="@+id/spr_pos_novo_jogador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="4dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginRight="8dp"
            android:text="@string/lbl_numero" />

        <Spinner
            android:id="@+id/spr_num_novo_jogador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:scrollbarSize="4dp"
            android:spinnerMode="dialog"
            android:textAlignment="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:id="@+id/quadro_info_acoes_jogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_ficha_tec_jogador"
            android:layout_marginVertical="@dimen/jogador_pad_ver"
            android:textSize="@dimen/partida_fonte"
            android:textColor="@color/text_default"
            android:textStyle="bold"/>
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/altura_ic_acao_min"
                android:layout_height="@dimen/altura_ic_acao_min"
                android:src="@drawable/acao_add_ponto_pro"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gols_ficha_tec_jogador"
            />
        <TextView
            android:id="@+id/txv_jogador_gols_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/jogador_pad_hor"
            android:text="1"
            android:textColor="@color/text_default"
            android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/altura_ic_acao_min"
                android:layout_height="@dimen/altura_ic_acao_min"
                android:src="@drawable/acao_add_ponto_contra"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gols_contra_ficha_tec_jogador"
            />
        <TextView
            android:id="@+id/txv_jogador_gols_contra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/jogador_pad_hor"
            android:text="1"
            android:textColor="@color/text_default"
            android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/altura_ic_acao_min"
                android:layout_height="@dimen/altura_ic_acao_min"
                android:src="@drawable/acao_add_falta"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/faltas_ficha_tec_jogador"
            />
        <TextView
            android:id="@+id/txv_jogador_faltas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/jogador_pad_hor"
            android:text="1"
            android:textColor="@color/text_default"
            android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cartoes_ficha_tec_jogador"
            />
            <ImageView
                android:id="@+id/img_jogador_amarelo1"
                android:layout_width="@dimen/altura_ic_acao_min"
                android:layout_height="@dimen/altura_ic_acao_min"
                android:src="@drawable/acao_add_card_amarelo"/>
            <LinearLayout
                android:id="@+id/img_jogador_amarelo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/altura_ic_acao_min"
                    android:layout_height="@dimen/altura_ic_acao_min"
                    android:src="@drawable/acao_add_card_amarelo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†’"
                    android:textColor="@color/text_default"
                    android:textStyle="bold"
                />
            </LinearLayout>
            <TextView
                android:id="@+id/txv_jogador_divisor_cartoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@color/text_default"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/img_jogador_vermelho"
                android:layout_width="@dimen/altura_ic_acao_min"
                android:layout_height="@dimen/altura_ic_acao_min"
                android:src="@drawable/acao_add_card_vermelho"/>
            <ImageView
                android:id="@+id/img_jogador_sem_cartao"
                android:layout_width="@dimen/altura_ic_acao_min"
                android:layout_height="@dimen/altura_ic_acao_min"
                android:src="@drawable/acao_del_default_desabled"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btn_cancelar_jogador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_shape_enabled"
                android:shadowColor="#3D3D3D"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="@string/btn_cancelar"
                android:textColor="@color/btn_texto_ic"
                android:textSize="16sp" />
            <Button
                android:id="@+id/btn_confirmar_jogador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_shape_desabled"
                android:enabled="false"
                android:shadowColor="#3D3D3D"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="@string/btn_adicionar"
                android:textColor="@color/btn_texto_ic"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>