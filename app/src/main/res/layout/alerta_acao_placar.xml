<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="?android:attr/listDivider"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/jogador_pad_ver">
        <TextView
            android:id="@+id/acao_jogador_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25dp"
            android:layout_margin="@dimen/jogador_pad_ver"
            android:padding="@dimen/placar_pad_ver"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/acao_jogador_posicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F7C7D6FF"
                android:layout_marginVertical="@dimen/jogador_pad_ver"
                android:layout_marginRight="@dimen/jogador_pad_hor"
                android:paddingHorizontal="16dp"
                android:paddingVertical="@dimen/jogador_pad_ver"
                android:text="GK"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/acao_jogador_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_nome_jogador"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginVertical="@dimen/jogador_pad_ver"
                android:paddingVertical="@dimen/jogador_pad_ver"
                android:singleLine="true"
                android:textSize="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/partida_acao_gol"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/branco"
                android:layout_marginRight="@dimen/acao_margin_hor">
                <Button
                    android:id="@+id/btn_del_acao_gol"
                    android:layout_width="@dimen/altura_ic_acao"
                    android:layout_height="@dimen/altura_ic_acao"
                    android:layout_gravity="center"
                    android:enabled="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/branco"
                android:layout_marginLeft="@dimen/acao_margin_hor">
                <Button
                    android:id="@+id/btn_add_acao_gol"
                    android:layout_width="@dimen/altura_ic_acao"
                    android:layout_height="@dimen/altura_ic_acao"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/jogador_pad_ver"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/partida_acao_falta"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/branco"
                android:layout_marginRight="@dimen/acao_margin_hor">
                <Button
                    android:id="@+id/btn_del_acao_falta"
                    android:layout_width="@dimen/altura_ic_acao"
                    android:layout_height="@dimen/altura_ic_acao"
                    android:layout_gravity="center"
                    android:enabled="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/branco"
                android:layout_marginLeft="@dimen/acao_margin_hor">
                <Button
                    android:id="@+id/btn_add_acao_falta"
                    android:layout_width="@dimen/altura_ic_acao"
                    android:layout_height="@dimen/altura_ic_acao"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/jogador_pad_ver"/><TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/partida_acao_cartao"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/branco"
                android:layout_marginRight="@dimen/acao_margin_hor">
                <Button
                    android:id="@+id/btn_del_acao_cartao_vermelho"
                    android:layout_width="@dimen/altura_ic_acao"
                    android:layout_height="@dimen/altura_ic_acao"
                    android:layout_gravity="center"
                    android:enabled="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/branco"
                android:layout_marginLeft="@dimen/acao_margin_hor">
                <Button
                    android:id="@+id/btn_add_acao_cartao_vermelho"
                    android:layout_width="@dimen/altura_ic_acao"
                    android:layout_height="@dimen/altura_ic_acao"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginVertical="@dimen/jogador_pad_ver"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/branco"
                android:layout_marginRight="@dimen/acao_margin_hor">
                <Button
                    android:id="@+id/btn_del_acao_cartao_amarelo"
                    android:layout_width="@dimen/altura_ic_acao"
                    android:layout_height="@dimen/altura_ic_acao"
                    android:layout_gravity="center"
                    android:enabled="false"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/branco"
                android:layout_marginLeft="@dimen/acao_margin_hor">
                <Button
                    android:id="@+id/btn_add_acao_cartao_amarelo"
                    android:layout_width="@dimen/altura_ic_acao"
                    android:layout_height="@dimen/altura_ic_acao"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:id="@+id/acao_jogador_segundo_amarelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="@dimen/altura_ic_acao"
                        android:layout_height="@dimen/altura_ic_acao"
                        android:scaleType="fitCenter"
                        android:src="@drawable/acao_add_card_vermelho"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/jogador_pad_ver"/>
    </TableLayout>
    <Button
        android:id="@+id/btn_cancelar_acao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/jogador_pad_ver"
        android:background="@drawable/button_shape_enabled"
        android:shadowColor="#3D3D3D"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/btn_cancelar"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>